{
  "env": {
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "standard-with-typescript"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "sourceType": "module"
  },
  "plugins" : [
    "eslint-plugin-tsdoc",
    "@typescript-eslint"
  ],
  "rules": {
    "tsdoc/syntax": "warn"
  }
}
