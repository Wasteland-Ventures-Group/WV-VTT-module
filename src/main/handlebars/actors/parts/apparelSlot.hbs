{{~#if apparel~}}
  <div class="apparel-slot">
    <h3>{{apparel.name}}</h3>
    <div class="detail-groups">
      <div class="details">
        {{~#if apparel.sheet.type~}}
          <span>{{apparel.sheet.type}}</span>
        {{~/if~}}
        {{~#if (total apparel.data.damageThreshold)~}}
          <span>{{localize "wv.rules.damage.threshold.short"}} {{total apparel.data.damageThreshold}}</span>
        {{~/if~}}
        {{~#if (total apparel.data.quickSlots)~}}
          <span>{{localize "wv.rules.equipment.slots.quickSlot.plural"}} {{total apparel.data.quickSlots}}</span>
        {{~/if~}}
      </div>
      {{~#if apparel.data.notes~}}
        <div>{{apparel.data.notes}}</div>
      {{~/if~}}
    </div>
  </div>
{{~/if~}}
