{{~#if apparel~}}
  <div class="apparel-slot" data-item-id="{{apparel._id}}">
    <h3 class="flexrow flex-j-spaced">
      <img class="flex-fixed double-size-inline" src="{{apparel.img}}" />
      <span>{{apparel.name}}</span>
      <button type="button" class="control small fas fa-pen" data-action="edit" title="{{localize 'wv.system.actions.edit'}}"></button>
      <button type="button" class="control small fas fa-minus" data-action="unequip" title="{{localize 'wv.system.actions.unequip'}}"></button>
    </h3>
    <div class="detail-groups">
      <div class="details">
        {{~#if apparel.sheet.type~}}
          <span>{{apparel.sheet.type}}</span>
        {{~/if~}}
        {{~#if apparel.data.damageThreshold.total~}}
          <span>{{apparel.data.damageThreshold.total}} {{localize "wv.rules.damage.threshold.short"}}</span>
        {{~/if~}}
        {{~#if apparel.data.quickSlots.total~}}
          <span>{{localize "wv.rules.equipment.slots.quickSlot.plural"}}: {{apparel.data.quickSlots.total}}</span>
        {{~/if~}}
      </div>
      {{~#if apparel.data.tags.length~}}
        <section class="flexrow flex-gapped">
          {{~#each apparel.data.tags as |tag|~}}
            <span class="fas fa-tag tag flex-fixed">{{tag}}</span>
          {{~/each~}}
        </section>
      {{~/if~}}
      {{~#if apparel.data.notes~}}
        <div>{{apparel.data.notes}}</div>
      {{~/if~}}
    </div>
  </div>
{{~/if~}}
