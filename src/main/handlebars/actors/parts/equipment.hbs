<section class="flex-fixed">
  <div class="flexrow flex-j-spaced align-baseline">
    <h3 class="flex-fixed no-wrap">{{localize "wv.rules.equipment.slots.names.readiedItem"}}</h3>
    <label class="flex-fixed contained-target-inline">
      {{~localize "wv.rules.equipment.slots.quickSlot.plural"~}}
      <div class="resource-display">
        <input class="size-2" type="number" name="data.equipment.quickSlots.value" value="{{data.data.equipment.quickSlots.value}}" min="0" max="{{data.data.equipment.quickSlots.max}}" />
        <span>&nbsp;/&nbsp;</span>
        <span>{{data.data.equipment.quickSlots.max}}</span>
      </div>
    </label>
  </div>
  <div class="lighter-block equipment-slot" data-equipment-slot="readiedItem">
    <div>
      {{~#if sheet.equipment.readiedItem~}}
        {{~#if (eq sheet.equipment.readiedItem.type "weapon")~}}
{{>(get . "sheet.parts.weaponSlot") weapon=sheet.equipment.readiedItem readied=true}}
        {{~else~}}
{{>(get . "sheet.parts.itemSlot") item=sheet.equipment.readiedItem readied=true}}
        {{~/if~}}
      {{~else~}}
        <div class="equipment-slot-placeholder">{{localize "wv.rules.equipment.slots.names.readiedItem"}}</div>
      {{~/if~}}
    </div>
    <div class="equipment-slot-target lighter-block parchment-bg">
      <div class="ready-item-cost direct">{{sheet.equipment.readyItemCost.direct}} {{localize "wv.rules.actionPoints.short"}}</div>
      <div class="lighter-block ready-item-cost from-quick-slot" data-equipment-slot-extra="quickSlot">
        <div>{{sheet.equipment.readyItemCost.fromSlot}} {{localize "wv.rules.actionPoints.short"}}</div>
        <div>({{localize "wv.rules.equipment.slots.quickSlot.singular"}})</div>
      </div>
      <div class="ready-item-cost from-weapon-slot">
        <div>{{sheet.equipment.readyItemCost.fromSlot}} {{localize "wv.rules.actionPoints.short"}}</div>
        <div>({{localize "wv.rules.equipment.slots.weaponSlot.singular"}})</div>
      </div>
    </div>
  </div>
</section>
<section class="flex-fixed">
  <h3>{{localize "wv.rules.equipment.slots.weaponSlot.plural"}}</h3>
  <div class="flexrow flex-gapped">
    <div class="lighter-block equipment-slot" data-equipment-slot="weaponSlot1" data-item-id="{{sheet.equipment.weaponSlots.[0]._id}}">
      {{~#if sheet.equipment.weaponSlots.[0]~}}
{{>(get . "sheet.parts.weaponSlot") weapon=sheet.equipment.weaponSlots.[0] readied=false}}
      {{~else~}}
        <div class="equipment-slot-placeholder">{{localize "wv.rules.equipment.slots.names.weaponSlot1"}}</div>
      {{~/if~}}
    </div>
    <div class="lighter-block equipment-slot" data-equipment-slot="weaponSlot2" data-item-id="{{sheet.equipment.weaponSlots.[1]._id}}">
      {{~#if sheet.equipment.weaponSlots.[1]~}}
{{>(get . "sheet.parts.weaponSlot") weapon=sheet.equipment.weaponSlots.[1] readied=false}}
      {{~else~}}
        <div class="equipment-slot-placeholder">{{localize "wv.rules.equipment.slots.names.weaponSlot2"}}</div>
      {{~/if~}}
    </div>
  </div>
</section>
