<section>
  <h3>{{localize "wv.rules.equipment.slots.names.readiedItem"}}</h3>
  <div class="lighter-block equipment-slot" data-equipment-slot="readiedItem">
    <div class="equipment-slot-status">
    {{~#if (eq sheet.equipment.readiedItem.type "weapon")~}}
{{>(get . "sheet.parts.weaponSlot") weapon=sheet.equipment.readiedItem readied=true}}
    {{~/if~}}
    </div>
    <div class="equipment-slot-target">
      <div class="ready-item-cost direct">{{sheet.equipment.readyItemCost.direct}} {{localize "wv.rules.actionPoints.short"}}</div>
      <div class="lighter-block ready-item-cost from-quick-slot" data-equipment-slot-extra="quickSlot">
        <div>{{sheet.equipment.readyItemCost.fromSlot}} {{localize "wv.rules.actionPoints.short"}}</div>
        <div>({{localize "wv.rules.equipment.slots.quickSlot.singular"}})</div>
      </div>
      <div class="ready-item-cost from-weapon-slot">
        <div>{{sheet.equipment.readyItemCost.fromSlot}} {{localize "wv.rules.actionPoints.short"}}</div>
        <div>({{localize "wv.rules.equipment.slots.weaponSlot.singular"}})</div>
      </div>
    </div>
  </div>
</section>
<section>
  <h3>{{localize "wv.rules.equipment.slots.weaponSlot.plural"}}</h3>
  <div class="flexrow weapon-slots">
    <div class="lighter-block equipment-slot" data-equipment-slot="weaponSlot1" data-item-id="{{sheet.equipment.weaponSlots.[0]._id}}">
{{>(get . "sheet.parts.weaponSlot") weapon=sheet.equipment.weaponSlots.[0] readied=false}}
    </div>
    <div class="lighter-block equipment-slot" data-equipment-slot="weaponSlot2" data-item-id="{{sheet.equipment.weaponSlots.[1]._id}}">
{{>(get . "sheet.parts.weaponSlot") weapon=sheet.equipment.weaponSlots.[1] readied=false}}
    </div>
  </div>
</section>
<section>
  <h3>{{localize "wv.rules.equipment.apparel.name"}}</h3>
  <div class="details spacing-bottom">
    <span>{{localize "wv.rules.damage.threshold.long"}} {{data.data.equipment.damageThreshold}}</span>
    <span>{{localize "wv.rules.equipment.slots.quickSlot.plural"}} {{data.data.equipment.quickSlots.max}}</span>
  </div>
  <div class="apparel-slots">
    <div class="lighter-block equipment-slot apparel-slot" data-equipment-slot="armor">
      {{~#if sheet.equipment.armor~}}
{{>(get . "sheet.parts.apparelSlot") apparel=sheet.equipment.armor}}
      {{~else~}}
        <span class="equipment-slot-placeholder">{{localize "wv.rules.equipment.slots.names.armor"}}</span>
      {{~/if~}}
    </div>
    <div class="lighter-block equipment-slot apparel-slot" data-equipment-slot="clothing">
      {{~#if sheet.equipment.clothing~}}
{{>(get . "sheet.parts.apparelSlot") apparel=sheet.equipment.clothing}}
      {{~else~}}
        <span class="equipment-slot-placeholder">{{localize "wv.rules.equipment.slots.names.clothing"}}</span>
      {{~/if~}}
    </div>
    <div class="lighter-block equipment-slot apparel-slot" data-equipment-slot="eyes">
      {{~#if sheet.equipment.eyes~}}
{{>(get . "sheet.parts.apparelSlot") apparel=sheet.equipment.eyes}}
      {{~else~}}
        <span class="equipment-slot-placeholder">{{localize "wv.rules.equipment.slots.names.eyes"}}</span>
      {{~/if~}}
    </div>
    <div class="lighter-block equipment-slot apparel-slot" data-equipment-slot="mouth">
      {{~#if sheet.equipment.mouth~}}
{{>(get . "sheet.parts.apparelSlot") apparel=sheet.equipment.mouth}}
      {{~else~}}
        <span class="equipment-slot-placeholder">{{localize "wv.rules.equipment.slots.names.mouth"}}</span>
      {{~/if~}}
    </div>
    <div class="lighter-block equipment-slot apparel-slot" data-equipment-slot="belt">
      {{~#if sheet.equipment.belt~}}
{{>(get . "sheet.parts.apparelSlot") apparel=sheet.equipment.belt}}
      {{~else~}}
        <span class="equipment-slot-placeholder">{{localize "wv.rules.equipment.slots.names.belt"}}</span>
      {{~/if~}}
    </div>
  </div>
</section>
