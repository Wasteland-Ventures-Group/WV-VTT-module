        "weapons": {
          "type": "object",
          "description": "Labels related to Weapon Items",
          "required": ["attacks"],
          "additionalProperties": false,
          "properties": {
            "attacks": {
              "type": "object",
              "description": "Labels related to Weapon Attacks",
              "required": [
                "damageRoll",
                "execute",
                "hitRoll",
                "notEnoughAp",
                "range"
              ],
              "additionalProperties": false,
              "properties": {
                "damageRoll": {
                  "type": "string",
