{
  "$schema": "http://json-schema.org/schema",
  "$id": "https://raw.githubusercontent.com/Wasteland-Ventures-Group/WV-VTT-module/main/src/lang/schema.json",
  "title": "Wasteland Ventures localization file",
  "description": "This schema represents the layout of a localization file for the Wasteland Ventures system module for the Foundry virtual tabletop.",
  "type": "object",
  "required": ["wv"],
  "additionalProperties": false,
  "properties": {
    "wv": {
      "type": "object",
      "description": "The root element for the Wasteland Ventures system localization",
      "required": [
        "fvttItems",
        "migration",
        "prompt",
        "rolls",
        "ruleEngine",
        "sheets",
        "skills",
        "specials",
        "weapons"
      ],
      "additionalProperties": false,
      "properties": {
        "fvttItems": {
          "type": "object",
          "description": "Entries related to Foundry's concept of Items",
          "required": ["actions", "newName", "types"],
          "additionalProperties": false,
          "properties": {
            "actions": {
              "type": "object",
              "description": "Labels for actions, related to managing Items",
              "required": ["create", "delete", "edit"],
              "additionalProperties": false,
              "properties": {
                "create": {
                  "type": "string",
                  "description": "The action label for creating Items"
                },
                "delete": {
                  "type": "string",
                  "description": "The action label for delete Items"
                },
                "edit": {
                  "type": "string",
                  "description": "The action label for editing Items"
                }
              }
            },
            "newName": {
              "type": "string",
              "description": "The placeholder name for a new Item, containing a reference to the item name with `what`.",
              "pattern": "\\{what\\}"
            },
            "types": {
              "type": "object",
              "description": "Labels for different types of system Items",
              "required": ["effects"],
              "additionalProperties": false,
              "properties": {
                "effects": {
                  "$ref": "#/definitions/itemType",
                  "description": "Labels related to Effect Items"
                }
              }
            }
          }
        },
        "prompt": {
          "type": "object",
          "description": "Labels related to the prompt dialog",
          "required": ["buttonText", "defaults", "descriptions"],
          "additionalProperties": false,
          "properties": {
            "buttonText": {
              "type": "string",
              "description": "The label for the submit button"
            },
            "defaults": {
              "type": "object",
              "description": "Default labels for the prompt",
              "required": ["description", "title"],
              "additionalProperties": false,
              "properties": {
                "description": {
                  "type": "string",
                  "description": "The default description"
                },
                "title": {
                  "type": "string",
                  "description": "The default window title"
                }
              }
            },
            "descriptions": {
              "type": "object",
              "description": "Different descriptions for different use cases",
              "required": ["genericModifier", "modifier", "range"],
              "additionalProperties": false,
              "properties": {
                "genericModifier": {
                  "type": "string",
                  "description": "The label for a roll modifier dialog, when the target is not known"
                },
                "modifier": {
                  "type": "string",
                  "description": "The label for a roll modifier dialog, containing a reference to what is modified with `what`",
                  "pattern": "\\{what\\}"
                },
                "range": {
                  "type": "string",
                  "description": "The description for entering a range"
                }
              }
            }
          }
        },
        "rolls": {
          "type": "object",
          "description": "Labels related to rolls",
          "required": ["buttonTitle", "flavor", "roll"],
          "additionalProperties": false,
          "properties": {
            "buttonTitle": {
              "type": "string",
              "description": "The title (tooltip) for roll buttons"
            },
            "flavor": {
              "type": "string",
              "description": "The flavor text for the chat messages, containing a reference to what is rolled with `what`",
              "pattern": "\\{what\\}"
            },
            "roll": {
              "type": "string",
              "description": "The label for the roll/confirm button on a roll modifier dialog window"
            }
          }
        },
        "migration": {
          "type": "object",
          "description": "Labels for migrations",
          "required": ["completed", "started"],
          "additionalProperties": false,
          "properties": {
            "completed": {
              "type": "string",
              "description": "The notification text for completed migrations, containing references to the system name with `systemName` and the system version with `version`",
              "pattern": "(?:\\{systemName\\}.*\\{version\\})|(?:\\{version\\}.*\\{systemName\\})"
            },
            "started": {
              "type": "string",
              "description": "The notification text for started migration, containing references to the system name with `systemName` and the system version with `version`s",
              "pattern": "(?:\\{systemName\\}.*\\{version\\})|(?:\\{version\\}.*\\{systemName\\})"
            }
          }
        },
        "ruleEngine": {
          "type": "object",
          "description": "Labels related to the Rule Engine",
          "required": ["ruleElement", "errors"],
          "additionalProperties": false,
          "properties": {
            "ruleElement": {
              "type": "object",
              "description": "Various labels related to RuleElements",
              "required": ["create", "delete", "newName"],
              "additionalProperties": false,
              "properties": {
                "create": {
                  "type": "string",
                  "description": "The label for creating a RuleElement"
                },
                "delete": {
                  "type": "string",
                  "description": "The label for deleting a RuleElement"
                },
                "newName": {
                  "type": "string",
                  "description": "The default label for a new RuleElement"
                }
              }
            },
            "errors": {
              "type": "object",
              "description": "Labels for different errors",
              "required": ["messages", "semantic", "syntax"],
              "additionalProperties": false,
              "properties": {
                "messages": {
                  "type": "object",
                  "description": "Different messages related to errors",
                  "required": ["changedToDefault"],
                  "additionalProperties": false,
                  "properties": {
                    "changedToDefault": {
                      "type": "string",
                      "description": "A message saying that the value of a field was changed to the default, containing a reference to the value with `value`.",
                      "pattern": "\\{value\\}"
                    }
                  }
                },
                "semantic": {
                  "type": "object",
                  "description": "Various semantic errors",
                  "required": [
                    "enabled",
                    "label",
                    "priority",
                    "selector",
                    "type",
                    "value"
                  ],
                  "additionalProperties": false,
                  "properties": {
                    "enabled": {
                      "$ref": "#/definitions/ruleElementFieldErrors",
                      "description": "Error messages related to the enabled field"
                    },
                    "label": {
                      "$ref": "#/definitions/ruleElementFieldErrors",
                      "description": "Error messages related to the label field"
                    },
                    "priority": {
                      "$ref": "#/definitions/ruleElementFieldErrors",
                      "description": "Error messages related to the priority field"
                    },
                    "selector": {
                      "$ref": "#/definitions/ruleElementFieldErrors",
                      "description": "Error messages related to the selector field"
                    },
                    "type": {
                      "type": "object",
                      "description": "Error messages related to the type field",
                      "required": ["notFound", "wrongType"],
                      "additionalProperties": false,
                      "properties": {
                        "notFound": {
                          "type": "string",
                          "description": "The error message for unknown RuleElement types"
                        },
                        "wrongType": {
                          "$ref": "#/definitions/ruleElementFieldErrors/properties/wrongType"
                        }
                      }
                    },
                    "value": {
                      "$ref": "#/definitions/ruleElementFieldErrors",
                      "description": "Error messages related to the value field"
                    }
                  }
                },
                "syntax": {
                  "type": "string",
                  "description": "The description for the JSON syntax error, containing references to the number of the rule element with `number` and the error message with `message`",
                  "pattern": "(?:\\{number\\}.*\\{message\\})|(?:\\{message\\}.*\\{number\\})"
                }
              }
            }
          }
        },
        "sheets": {
          "type": "object",
          "description": "Labels related to sheets",
          "required": ["actor", "common", "item"],
          "additionalProperties": false,
          "properties": {
            "actor": {
              "type": "object",
              "description": "Labels for actor sheets",
              "required": [
                "background",
                "magic",
                "secondary",
                "skills",
                "special"
              ],
              "additionalProperties": false,
              "properties": {
                "background": {
                  "type": "object",
                  "description": "Labels for the background",
                  "required": [
                    "background",
                    "history",
                    "fears",
                    "dreams",
                    "karma"
                  ],
                  "additionalProperties": false,
                  "properties": {
                    "background": {
                      "type": "string",
                      "description": "Label for the background text area"
                    },
                    "history": {
                      "type": "string",
                      "description": "Label for the history text area"
                    },
                    "fears": {
                      "type": "string",
                      "description": "Label for the fears text area"
                    },
                    "dreams": {
                      "type": "string",
                      "description": "Label for the dreams text area"
                    },
                    "karma": {
                      "type": "string",
                      "description": "Label for the karma field"
                    }
                  }
                },
                "magic": {
                  "type": "object",
                  "description": "Labels related to magic",
                  "required": ["thaumSpecial"],
                  "additionalProperties": false,
                  "properties": {
                    "thaumSpecial": {
                      "type": "string",
                      "description": "The label for the thaumaturgy select"
                    }
                  }
                },
                "secondary": {
                  "type": "object",
                  "description": "Labels for secondary stats",
                  "required": [
                    "actionPoints",
                    "criticals",
                    "experience",
                    "healingRate",
                    "health",
                    "initiative",
                    "level",
                    "strain"
                  ],
                  "additionalProperties": false,
                  "properties": {
                    "actionPoints": {
                      "type": "string",
                      "description": "The label for the Action Points"
                    },
                    "criticals": {
                      "type": "object",
                      "description": "Labels related to criticals",
                      "required": ["failure", "success", "title"],
                      "additionalProperties": false,
                      "properties": {
                        "failure": {
                          "type": "string",
                          "description": "The label for critical failures"
                        },
                        "success": {
                          "type": "string",
                          "description": "The label for critical successes"
                        },
                        "title": {
                          "type": "string",
                          "description": "The title label for criticals"
                        }
                      }
                    },
                    "experience": {
                      "type": "string",
                      "description": "The label for the experience"
                    },
                    "healingRate": {
                      "type": "string",
                      "description": "The label for the healing rate"
                    },
                    "health": {
                      "type": "string",
                      "description": "The label for the health"
                    },
                    "initiative": {
                      "type": "string",
                      "description": "The label for the initiative"
                    },
                    "level": {
                      "type": "string",
                      "description": "The label for the level"
                    },
                    "strain": {
                      "type": "string",
                      "description": "The label for the strain"
                    }
                  }
                },
                "skills": {
                  "type": "object",
                  "description": "Labels related to the Skills table in the actor sheet",
                  "required": ["name", "ranks", "roll", "special", "total"],
                  "additionalProperties": false,
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "The label for the name column"
                    },
                    "ranks": {
                      "type": "string",
                      "description": "The label for the ranks column"
                    },
                    "roll": {
                      "type": "string",
                      "description": "The label for the roll column"
                    },
                    "special": {
                      "type": "string",
                      "description": "The label for the SPECIAL column"
                    },
                    "total": {
                      "type": "string",
                      "description": "The label for the total column"
                    }
                  }
                },
                "special": {
                  "type": "object",
                  "description": "Labels related to the SPECIALS table in the actor sheet",
                  "required": ["name", "roll", "value"],
                  "additionalProperties": false,
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "The label for the name column"
                    },
                    "roll": {
                      "type": "string",
                      "description": "The label for the roll button column"
                    },
                    "value": {
                      "type": "string",
                      "description": "The label for the value column"
                    }
                  }
                }
              }
            },
            "common": {
              "type": "object",
              "description": "Labels common for all sheets",
              "required": ["names", "placeholders", "tabs"],
              "additionalProperties": false,
              "properties": {
                "names": {
                  "type": "object",
                  "description": "Names for different sheets",
                  "required": ["actorSheet", "effectSheet", "weaponSheet"],
                  "additionalProperties": false,
                  "properties": {
                    "actorSheet": {
                      "type": "string",
                      "description": "The label for the Actor sheet"
                    },
                    "effectSheet": {
                      "type": "string",
                      "description": "The label for the Effect sheet"
                    },
                    "weaponSheet": {
                      "type": "string",
                      "description": "The label for the Weapon sheet"
                    }
                  }
                },
                "placeholders": {
                  "type": "object",
                  "description": "Labels used as placeholders in inputs",
                  "required": ["documentName"],
                  "additionalProperties": false,
                  "properties": {
                    "documentName": {
                      "type": "string",
                      "description": "The placeholder label for generic documents"
                    }
                  }
                },
                "tabs": {
                  "type": "object",
                  "description": "Labels for tabs",
                  "required": [
                    "background",
                    "effects",
                    "inventory",
                    "magic",
                    "rules",
                    "stats"
                  ],
                  "additionalProperties": false,
                  "properties": {
                    "background": {
                      "type": "string",
                      "description": "The label for the background tab"
                    },
                    "effects": {
                      "type": "string",
                      "description": "The label for the effects tab"
                    },
                    "inventory": {
                      "type": "string",
                      "description": "The label for the inventory tab"
                    },
                    "magic": {
                      "type": "string",
                      "description": "The label for the magic tab"
                    },
                    "rules": {
                      "type": "string",
                      "description": "The label for the rules tab"
                    },
                    "stats": {
                      "type": "string",
                      "description": "The label for the stats tab"
                    }
                  }
                }
              }
            },
            "item": {
              "type": "object",
              "description": "Labels for Item sheets",
              "required": ["common", "weapon"],
              "additionalProperties": false,
              "properties": {
                "common": {
                  "type": "object",
                  "description": "Common labels for Items",
                  "required": ["notes"],
                  "additionalProperties": false,
                  "properties": {
                    "notes": {
                      "type": "string",
                      "description": "The label user provided notes"
                    }
                  }
                },
                "weapon": {
                  "type": "object",
                  "description": "Labels for Weapon sheets",
                  "required": [
                    "attacks",
                    "holdout",
                    "ranges",
                    "reload",
                    "skill",
                    "strengthRequirement"
                  ],
                  "additionalProperties": false,
                  "properties": {
                    "attacks": {
                      "type": "object",
                      "description": "Labels related to attacks",
                      "required": [
                        "ap",
                        "damage",
                        "dtReduction",
                        "rounds",
                        "title"
                      ],
                      "additionalProperties": false,
                      "properties": {
                        "ap": {
                          "type": "string",
                          "description": "The label for the AP cost"
                        },
                        "damage": {
                          "type": "string",
                          "description": "The label for the damage"
                        },
                        "dtReduction": {
                          "type": "string",
                          "description": "The label for the DT reduction"
                        },
                        "rounds": {
                          "type": "string",
                          "description": "The label for the rounds"
                        },
                        "title": {
                          "type": "string",
                          "description": "The heading for the attacks block"
                        }
                      }
                    },
                    "holdout": {
                      "type": "string",
                      "description": "The label for the holdout display"
                    },
                    "ranges": {
                      "type": "object",
                      "description": "Labels related to ranges",
                      "required": [
                        "distance",
                        "long",
                        "medium",
                        "modifier",
                        "range",
                        "short",
                        "title"
                      ],
                      "additionalProperties": false,
                      "properties": {
                        "distance": {
                          "type": "string",
                          "description": "The name for the distance column"
                        },
                        "long": {
                          "type": "string",
                          "description": "The name for the long range"
                        },
                        "medium": {
                          "type": "string",
                          "description": "The name for the medium range"
                        },
                        "modifier": {
                          "type": "string",
                          "description": "The name for the modifier column"
                        },
                        "range": {
                          "type": "string",
                          "description": "The name for the range column"
                        },
                        "short": {
                          "type": "string",
                          "description": "The name for the short range"
                        },
                        "title": {
                          "type": "string",
                          "description": "The heading for the ranges block"
                        }
                      }
                    },
                    "reload": {
                      "type": "object",
                      "description": "Labels related to reloading",
                      "required": [
                        "ap",
                        "caliber",
                        "containerType",
                        "size",
                        "title"
                      ],
                      "additionalProperties": false,
                      "properties": {
                        "ap": {
                          "type": "string",
                          "description": "The label for the reload AP"
                        },
                        "caliber": {
                          "type": "string",
                          "description": "The label for the caliber"
                        },
                        "containerType": {
                          "type": "string",
                          "description": "The label for the container type"
                        },
                        "size": {
                          "type": "string",
                          "description": "The label for the reload size"
                        },
                        "title": {
                          "type": "string",
                          "description": "The heading for the reload block"
                        }
                      }
                    },
                    "skill": {
                      "type": "string",
                      "description": "The label for the skill display"
                    },
                    "strengthRequirement": {
                      "type": "string",
                      "description": "The label for the strength requirement display"
                    }
                  }
                }
              }
            }
          }
        },
        "skills": {
          "type": "object",
          "description": "Labels related to Skills",
          "required": ["errors", "names"],
          "additionalProperties": false,
          "properties": {
            "errors": {
              "type": "object",
              "description": "Errors related to Skills",
              "required": ["unknownSkill"],
              "additionalProperties": false,
              "properties": {
                "unknownSkill": {
                  "type": "string",
                  "description": "The label for an unknown Skill"
                }
              }
            },
            "names": {
              "type": "object",
              "description": "Names for different Skills",
              "required": [
                "barter",
                "diplomacy",
                "explosives",
                "firearms",
                "intimidation",
                "lockpick",
                "magicalEnergyWeapons",
                "mechanics",
                "medicine",
                "melee",
                "science",
                "sleight",
                "sneak",
                "survival",
