                }
              }
            }
          }
        },
        "specials": {
          "type": "object",
          "description": "Labels related to SPECIALs",
          "required": ["errors", "names"],
          "additionalProperties": false,
          "properties": {
            "errors": {
              "type": "object",
              "description": "Errors related to Skills",
              "required": ["unknownSpecial"],
              "additionalProperties": false,
              "properties": {
