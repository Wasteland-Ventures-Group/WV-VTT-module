{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error",
    "lib": ["ES2020"],
    "module": "ES2020",
    "moduleResolution": "Node",
    "noEmit": true,
    "strict": true,
    "target": "ES2020",
    "types": ["@league-of-foundry-developers/foundry-vtt-types"]
  },
  "files": [
    "./gulpfile.ts",
    "./src/main/typescript/constants.ts",
    "./src/main/typescript/data/foundryCommon.ts",
    "./src/main/typescript/data/common.ts",
    "./src/main/typescript/data/actor/source.ts",
    "./src/main/typescript/data/item/source.ts"
  ],
  "include": ["./gulp/**/*.ts"]
}
